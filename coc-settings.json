{
  "languageserver": {
    "haskell-ide-engine": {
      "command": "stack",
      "args": ["exec", "--", "hie"],
      "trace.server": "verbose",
      "rootPatterns": [".stack.yaml", "cabal.config", "package.yaml"],
      "filetypes": ["hs", "lhs", "haskell"],
      "initializationOptions": {}
    },
    "reason-language-server": {
      "command": "reason-language-server",
      "filetypes": ["ocaml", "reason"]
    },
    "metals": {
      "command": "metals-vim",
      "rootPatterns": ["build.sbt"],
      "filetypes": ["scala", "sbt"]
    },
    "elixir-ls": {
      "command": "~/apps/elixir-ls/release/language_server.sh",
      "filetypes": ["elixir", "eelixir"]
    },
    "crystalline": {
      "command": "crystalline",
      "filetypes": ["crystal"]
    }
  },
  "prettier.singleQuote": true,
  "prettier.disableLanguages": [],
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "typescript.autoClosingTags": true,
  "javascript.autoClosingTags": true,
  "snippets.priority": 10,
  "snippets.userSnippetsDirectory": "~/.vim/UltiSnips",
  "coc.source.buffer.priority": 5,
  "coc.source.word.priority": 1,
  "codeLens.enable": true,
  "html.autoClosingTags": true,
  "solargraph.useBundler": true,
  "explorer.keyMappings.global": {
    "j": ["wait", "nodeNext"],
    "k": ["wait", "nodePrev"]
  },
  "explorer.git.showIgnored": true,
  "explorer.filename.colored.enable": true,
  "list.normalMappings": {
    "q": "do:exit"
  },
  "git.branchCharacter": ""
}
