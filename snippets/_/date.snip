snippet date
options word
  `strftime("%Y-%m-%d")`

snippet date_full
alias df
options word
	`strftime("%Y-%m-%d %H:%M:%S")`

snippet date_en
alias dd
options word
	`strftime("%d %b %Y")`

snippet date_time
alias dt
options word
	`strftime("%H:%M:%S")`

snippet lastmod
abbr Last modified time
alias lmod
	Last Modified: `strftime("%Y-%m-%d %H:%M:%S")`
