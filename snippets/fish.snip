snippet if
  if ${1:#:condition}
    ${0:TARGET}
  end

snippet switch
  switch ($${1:{name}})
  case ${2:pattern*}
    ${0}
  case '*'
    ${3:echo "$$1\} Didn't match anything"}
  end

snippet while
  while ${1:#:condition}
    ${0:TARGET}
  end


snippet for
  for ${1:#:word} in ${2:#:words}
    ${0:TARGET}
  end

snippet function
alias f
alias func
  function ${1:#:name}
		${0:TARGET}
  end
